python3.9 -m venv ~/vfe0.8
source ~/vfe0.8/bin/activate
python3.9 -m pip install --upgrade pip 
python3.9 -m pip install --ignore-installed PyYAML -r requirements.txt
python3.9 -m pip install -U PyYAML
sudo ln -s $PWD/vimana.py /usr/bin/vimana
sudo ln -s $PWD/vimana.py /usr/bin/vf
vimana

